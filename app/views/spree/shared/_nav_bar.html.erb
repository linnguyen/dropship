    <!-- HEADER -->
	<header>
		<!-- top Header -->
		<div id="top-header">
			<div class="container">
				<div class="pull-left">
					<span>Shop what you want!</span>
				</div>
				<div class="pull-right">
		 			<ul class="header-top-links">
            <li><%= link_to Spree.t(:contact_us_title), spree.new_contact_path  %></li>
						<li><a href="#">About</a></li>
					</ul>
				</div>
			</div>
		</div>
		<!-- /top Header -->

		<!-- header -->
		<div id="header">
			<div class="container">
				<div class="pull-left">
					<!-- Logo -->
					<div class="header-logo">
						<%= link_to  spree.root_path, class: "logo" do %>
              <%= image_tag 'logo.png' %>
            <% end %>
					</div>
					<!-- /Logo -->
          <!-- Search -->
          <div class="header-search">
            <%= render partial: 'spree/shared/search' %>
          </div>
          <!-- Search -->
        </div>
				<div class="pull-right">
					<ul class="header-btns">
						<!-- Account -->
						<li class="header-account dropdown default-dropdown">
							<div class="dropdown-toggle" role="button" data-toggle="dropdown" aria-expanded="true">
								<div class="header-btns-icon">
									<i class="fa fa-user-o"></i>
								</div>
                <% if spree_current_user %>
                  <strong>Hi, <%= spree_current_user.first_name %><i class="fa fa-caret-down"></i></strong>
                <% else %>
                  <strong class="text-uppercase">My Account <i class="fa fa-caret-down"></i></strong>
                <% end %>
							</div>
							<% if spree_current_user %>
							   <%= link_to Spree.t(:logout), spree.logout_path, class: "text-uppercase"%>
							<% else %>
							   <%= link_to Spree.t(:login), spree.login_path, class: "text-uppercase"%> / <%= link_to Spree.t(:join), spree.signup_path, class: "text-uppercase"%>
							<% end %>
							<ul class="custom-menu">
							   <% if spree_current_user %>
                                <li>
								  	<%= link_to spree.account_path do %>
                                    <i class="fa fa-user-o"></i><%= Spree.t(:my_account) %>
                                    <% end %>
								</li>
                                <li>
								  	<%= link_to spree.logout_path do %>
                                    <i class="fa fa-sign-out"></i><%= Spree.t(:logout) %>
                                    <% end %>
							    </li>
								<% else %>
								<li id="link-to-login">
								  	<%= link_to spree.login_path do %>
                                    <i class="fa fa-unlock-alt"></i><%= Spree.t(:login) %>
                                    <% end %>
								 </li>
							   <% end %>
							</ul>

						</li>
						<!-- /Account -->

						<!-- Mobile nav toggle-->
						<li class="nav-toggle">
							<button class="nav-toggle-btn main-btn icon-btn"><i class="fa fa-bars"></i></button>
						</li>
						<!-- / Mobile nav toggle -->
					</ul>
				</div>
			</div>
			<!-- header -->
		</div>
		<!-- container -->
	</header>
	<!-- /HEADER -->
