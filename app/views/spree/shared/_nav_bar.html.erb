<!-- HEADER -->
<header>
  <!-- top Header -->
  <div id="top-header">
    <div class="container">
      <div class="pull-left">
        <span>Shop what you want!</span>
      </div>
      <div class="pull-right">
        <ul class="header-top-links">
          <li><%= link_to Spree.t(:contact_us_title), spree.new_contact_path %></li>
          <li><%= link_to Spree.t(:about), spree.about_path %></li>
        </ul>
      </div>
    </div>
  </div>
  <!-- /top Header -->

  <!-- header -->
  <div id="header">
    <div class="container">
      <div class="pull-left">
        <!-- Logo -->
        <div class="header-logo">
          <%= link_to spree.root_path, class: "logo" do %>
            <%= image_tag 'logo.png' %>
          <% end %>
        </div>
        <!-- /Logo -->

        <!-- Search, this tyle not work in custom.scss so put here -->
        <div class="header-search">
          <%= render partial: 'spree/shared/search' %>
        </div>
        <!-- /Search -->
      </div>
      <div class="pull-right">
        <ul class="header-btns">
          <!-- Account -->
          <li class="header-account dropdown default-dropdown">
            <div class="dropdown-toggle" role="button" data-toggle="dropdown" aria-expanded="true">
              <div class="header-btns-icon">
                <i class="fa fa-user-o"></i>
              </div>
              <% if spree_current_user %>
                <strong>Hi, <%= spree_current_user.first_name %><i class="fa fa-caret-down"></i></strong>
              <% else %>
                <strong class="text-uppercase">My Account <i class="fa fa-caret-down"></i></strong>
              <% end %>
            </div>
            <% if spree_current_user %>
              <%= link_to Spree.t(:logout), spree.logout_path, class: "text-uppercase" %>
            <% else %>
              <%= link_to Spree.t(:login), spree.login_path, class: "text-uppercase" %>
              / <%= link_to Spree.t(:join), spree.signup_path, class: "text-uppercase" %>
            <% end %>
          </li>
          <!-- /Account -->

          <!-- Cart -->
          <li class="header-cart dropdown default-dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
              <% if simple_current_order.nil? || simple_current_order.item_count.zero? %>
                <%= link_to spree.cart_path do %>
                  <div class="header-btns-icon">
                    <i class="fa fa-shopping-cart"></i>
                  </div>
                <% end %>
                <strong class="text-uppercase">My Cart:</strong>
                <br>
                <span>(Empty)</span>
              <% else %>
                <%= link_to spree.cart_path do %>
                  <div class="header-btns-icon">
                    <i class="fa fa-shopping-cart"></i>
                    <span class="qty"><%= simple_current_order.item_count %></span>
                  </div>
                <% end %>
                <strong class="text-uppercase">My Cart:</strong>
                <br>
                <span><%= simple_current_order.display_total %></span>
              <% end %>
            </a>
          </li>
          <!-- /Cart -->

          <!-- Mobile nav toggle-->
          <li class="nav-toggle">
            <button class="nav-toggle-btn main-btn icon-btn"><i class="fa fa-bars"></i></button>
          </li>
          <!-- / Mobile nav toggle -->
        </ul>
      </div>
    </div>
    <!-- header -->
  </div>
  <!-- container -->
</header>
<!-- /HEADER -->




